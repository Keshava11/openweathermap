<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextStyleHuge">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="CustomTextStyleLargest">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/H1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

    <style name="CustomTextStyleNormal">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">@dimen/P3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>

</resources>